#!/bin/bash
POPONNX_ROOT=$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd)
export CMAKE_PREFIX_PATH=${POPONNX_ROOT}${CMAKE_PREFIX_PATH:+:${CMAKE_PREFIX_PATH}}
export CPATH=${POPONNX_ROOT}/include${CPATH:+:${CPATH}}
export LIBRARY_PATH=${POPONNX_ROOT}/lib${LIBRARY_PATH:+:${LIBRARY_PATH}}
export LD_LIBRARY_PATH=${POPONNX_ROOT}/lib${LD_LIBRARY_PATH:+:${LD_LIBRARY_PATH}}
# for OS/X
export DYLD_LIBRARY_PATH=${POPONNX_ROOT}/lib${DYLD_LIBRARY_PATH:+:${DYLD_LIBRARY_PATH}}
export PYTHONPATH=${POPONNX_ROOT}/python
